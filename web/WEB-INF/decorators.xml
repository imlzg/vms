<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/decorator">
    <excludes>
        <pattern>/sitemap.action</pattern>
        <pattern>/manage/signup.action</pattern>
    </excludes>

    <decorator name="main" page="main.dec">
        <pattern>/*</pattern>
        <excludes>
            <pattern>/show.action*</pattern>
        </excludes>
        <excludes>
            <pattern>/manage/*</pattern>
        </excludes>
    </decorator>

    <decorator name="show" page="show.dec">
        <pattern>/show.action*</pattern>
    </decorator>

    <decorator name="manage" page="manage.dec">
        <pattern>/manage/*</pattern>
    </decorator>

</decorators>