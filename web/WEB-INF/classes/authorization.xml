        <privilege name="unrecnews"   action="/unrecnews"/>


        <privilege name="manage" action="/manage/*" excludes="/manage/signup, /manage/login"/>
    </privileges>

    <roles>
        <role name="user">

            <right privilege="addmovie"/>
            <right privilege="savemovie"/>
            <right privilege="savedouban"/>

            <right privilege="addsource"/>
            <right privilege="savesource"/>

            <right privilege="addplot"/>
            <right privilege="saveplot"/>

            <right privilege="addpict"/>
            <right privilege="fancypict"/>
            <right privilege="fetchpicts"/>
            <right privilege="uploadpicts"/>

            <right privilege="addtopic"/>
            <right privilege="savetopic"/>
            <right privilege="savereply"/>


            <right privilege="savetag"/>

            <right privilege="collect"/>

            <right privilege="vote"/>


            <right privilege="addstar"/>
            <right privilege="savestar"/>

            <right privilege="addphoto"/>
            <right privilege="fancyphoto"/>
            <right privilege="fetchphotos"/>
            <right privilege="uploadphotos"/>

            <right privilege="addnews"/>
            <right privilege="savenews"/>


        </role>

        <role name="editor">
            <right privilege="editmovie"/>
            <right privilege="saveedit"/>
            <right privilege="saveeditdouban"/>
            <right privilege="makeposter"/>
            <right privilege="recmovie"/>

            <right privilege="editsource"/>
            <right privilege="persistsource"/>
            <right privilege="deletesource"/>

            <right privilege="editplot"/>
            <right privilege="persistplot"/>
            <right privilege="deleteplot"/>

            <right privilege="editpict"/>
            <right privilege="persistpict"/>
            <right privilege="deletepict"/>

            <right privilege="edittopic"/>
            <right privilege="persisttopic"/>
            <right privilege="deletetopic"/>

            <right privilege="deletereply"/>


            <right privilege="editstar"/>
            <right privilege="persiststar"/>
            <right privilege="deletestar"/>
            <right privilege="makephoto"/>
            <right privilege="recstar"/>

            <right privilege="editphoto"/>
            <right privilege="persistphoto"/>
            <right privilege="deletephoto"/>

            <right privilege="editnews"/>
            <right privilege="persistnews"/>
            <right privilege="deletenews"/>
            <right privilege="recnews"/>


        </role>

        <role name="admin">
            <right privilege="*"/>
        </role>

    </roles>
</authz>
